@model Retail_Management_System.Models.Product

@{
    ViewBag.Title = "ProductView";
}

<h2>ProductView</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="card p-3 col-3">




        <dd class="card-title">
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.BrandName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @if (Model.Discount != 0 || Model.SpecialDiscount != 0)
            {
                <dt>
                <s>  @Html.DisplayFor(model => model.Price) </s> <br />
                    

            @(Model.Price - (Model.Discount + Model.SpecialDiscount) / 100 * Model.Price)

           @Html.DisplayFor(model => model.Price)
            </dt>
            }
            


        </dd>




        @if (Model.Stock != 0)
        {
            <dt>Available</dt>
        }
        else if (Model.Stock > 10)
        {
            < dt > Only few left!</ dt >
        }
        else
        {
            < dt > No stock left.</ dt >
        }


        @if (Model.Stock<30)
        {
            <dt >Clearane Sale is on action.</dt>
        }

        @if (Model.Discount != 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Discount)
            </dt>
            <dd class="alert-info">
                @Html.DisplayFor(model => model.Discount)% Off
            </dd>
        }
        else
        {
            <dt>No Discount Available!</dt>
        }

        @if (Model.SpecialDiscount != 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SpecialDiscount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SpecialDiscount)
            </dd>

        }

        

       
    </dl>
</div>
<tr>
    <th align="right">
        @using (Html.BeginForm("AddtoCart", "Product", FormMethod.Post, new { @class = "form-inline" }))
        {
            @Html.TextBox("Itemno", "1", new { @class = "form-control", @placeholder = "Quantity" })
            @Html.HiddenFor(m => m.Productid, new { @class = "form-control", @value = Model.Productid })
            <button type="submit" class="btn btn-success btn-sm ml-2">Add to Cart <i class="fa fa-cart-plus"></i></button>
        }
    </th>
</tr>


