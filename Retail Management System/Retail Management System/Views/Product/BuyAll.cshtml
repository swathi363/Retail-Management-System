@model IEnumerable<Retail_Management_System.Models.Cart>

@{
    ViewBag.Title = "Confirm Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_background")
@Html.Partial("user_navbar")

<div class="d-flex justify-content-center">
    <div class="card w-50 p-4 mt-5 ">


        <p style="color:chocolate" class="d-flex justify-content-center">

            Do you want to confirm your order?
        </p>


        <table class="table">
            <tr>
                <th colspan="3">
                    Review Your orders
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoofProduct)
                    </td>
                    <td>
                        ₹@Html.DisplayFor(modelItem => item.Amount)
                    </td>

                </tr>
            }
        </table>
        <div class="d-flex justify-content-center">
            @Html.ActionLink("Confirm Order", "PayNow", new { UserId = ViewBag.UserId, ProductId = ViewBag.ProductId }, new { @class = "mt-2 col-4 btn btn-success" })
        </div>
    </div>
</div>
<div class=" d-flex justify-content-center">
    <p class="mt-2">
        @Html.ActionLink("Back to Cart", "Cart", "User", null, new { @class = "btn btn-info btn-sm" })
    </p>
</div>
