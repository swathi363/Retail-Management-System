@model Retail_Management_System.Models.Product


@{
    ViewBag.Title = "AgeFilter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_background")
@if (Session["UserId"] != null)
{
    @Html.Partial("user_navbar")
}
else
{
    @Html.Partial("admin_navbar")
}

<form method="get" action="/Product/Filter" class="form-inline m-2">
    <div class="col-md-10">
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Category",
                Value = "Category"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Brand",
                Value = "Brand"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Age",
                Value = "Age"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Gender",
                Value = "Gender"
            });


        }
        @Html.DropDownList("name", listItems, new { @class = "form-control fa fa-filter" })
        <input type="submit" value="Filter" class="btn btn-dark btn-sm" />
    </div>
</form>

<div class="m-3 " style="opacity:100">
    @foreach (var item in (List<string>)ViewBag.Age)
    {

        @Html.ActionLink(item, "AgeFilter", new { Age = item }, new { @class = "list-group-item list-group-item-action bg-transparent" })

    }
</div>

