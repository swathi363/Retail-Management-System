@model Retail_Management_System.Models.User


@{
    ViewBag.Title = "BuyNow";
}
@Html.Partial("_background")
@Html.Partial("user_navbar")

<div class="d-flex justify-content-center">
    <div class="card w-50 p-4 mt-5 ">
        <p>Your order will be delivered to: </p>
        <blockquote>
            @Html.DisplayFor(model => model.Address)
            <br />
            @Html.DisplayFor(model => model.City)
            <br />
            @Html.DisplayFor(model => model.Country)
        </blockquote>

        


        <div class="d-flex justify-content-center">
            @Html.ActionLink("Next", "PayNow", new { UserId = ViewBag.UserId, ProductId = ViewBag.ProductId }, new { @class = "btn btn-primary" })
        
        

    </div>
    </div>
<div class=" d-flex justify-content-center">
    <p class="mt-2">
        @Html.ActionLink("Back to Cart", "Cart", "User", null, new { @class = "btn btn-info btn-sm" })
    </p>
    </div>
    
