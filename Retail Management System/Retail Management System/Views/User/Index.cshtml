@model Retail_Management_System.Models.User
@{
    //ViewBag.Title = "Login";
    @Html.Partial("_background")
   
    @Html.Partial("common_navbar")


}



@*<h2>Login</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*<div class="form-row card col-4 p-4 justify-content-center d-flex">*@
    <div class="d-flex justify-content-center">
        @*<div class="user_card mt-lg-2 ">*@
            <div class="card w-25 p-4 mt-5" style="box-shadow:0 19px 38px rgba(0,0,0,0.30),0 15px 12px rgba(0,0,0,0.22)">

                <h4 class="text-center text-black-50"><i class="fa fa-users">User</i></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-form-label-lg">
                        @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control col-25" } })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-form-label-lg">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-25" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class=" d-flex justify-content-center">
                        <button type="submit" class="btn btn-lg btn-block btn-primary">Login</button>

                    </div>
                </div>
            </div>
        </div>


}


<div class="d-flex justify-content-center mt-1" style="font-style:oblique">
    New User?
    @Html.ActionLink("Sign Up", "Register", "User")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
