@model Retail_Management_System.Models.Feedback

@{
    ViewBag.Title = "Feedback";
}
@Html.Partial("_background")
@Html.Partial("user_navbar")

<h2 style="text-align:center">Feedback</h2>
<div class="d-flex justify-content-center">
<div class="card w-50 mt-4 ">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="text-align:center">@ViewBag.ProductName</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.FeedBack, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.FeedBack, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FeedBack, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="hidden" value=@ViewBag.ProductId name="ProductId" />
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Orders", "MyOrders",new { @class="btn btn-primary"})
    </div>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
